{
  "manifest_version": 3,
  "name": "Copy URL",
  "version": "1.0.0",
  "description": "現在のページのURLを様々な形式で簡単にコピーできます",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Copy URL"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 